<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>


<?import cn.edu.ncu.eureka.shapefamily.view.ShapePane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.text.Font?>
<BorderPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0"
            prefWidth="600.0"
            xmlns="http://javafx.com/javafx/15.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cn.edu.ncu.eureka.shapefamily.controller.DrawAction">
   <center>
      <ShapePane fx:id="shapePane"
                 prefHeight="200.0"
                 prefWidth="200.0"
                 BorderPane.alignment="CENTER" />
   </center>
   <top>
      <Button fx:id="drawBtn"
              onAction="#showInformation"
              mnemonicParsing="false"
              text="显示图形信息"
              BorderPane.alignment="CENTER" />
   </top>
   <bottom>
      <TextArea fx:id="display"
                prefHeight="100.0"
                prefWidth="50.0"
                >
         <font>
            <Font size="20.0" />
         </font></TextArea>
   </bottom>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="titleLab" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cn.edu.ncu.eureka.atm.controller.ATMAction">
   <children>
      <TextArea fx:id="display" layoutX="200.0" layoutY="100.0" prefHeight="200.0" prefWidth="200.0">
         <font>
            <Font size="20.0" />
         </font></TextArea>
      <Button fx:id="depositBtn" layoutX="95.0" layoutY="100.0" mnemonicParsing="false" onAction="#ATMDeposit" text="存款">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Button fx:id="withdrawBtn" layoutX="95.0" layoutY="179.0" mnemonicParsing="false" onAction="#ATMWithdraw" text="取款">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Button fx:id="transferBtn" layoutX="95.0" layoutY="258.0" mnemonicParsing="false" onAction="#ATMTransfer" text="转账">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Label layoutX="236.0" layoutY="36.0" text="ATM系统">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Button fx:id="queryBtn" onAction="#info"
              layoutX="421.0" layoutY="100.0" mnemonicParsing="false" text="查询信息">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Button fx:id="exitBtn" onAction="#exit"
              layoutX="421.0" layoutY="258.0" mnemonicParsing="false" text="退出系统">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Button fx:id="modifyBtn" onAction="#modify"
              layoutX="421.0" layoutY="179.0" mnemonicParsing="false" text="修改信息">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
